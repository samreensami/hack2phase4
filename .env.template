# Task Web App - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Backend Environment Variables
# ---------------------------

# PostgreSQL Database Connection
# Format: postgresql://user:password@host:port/database
# For local dev with SQLite: sqlite:///./database.db
DATABASE_URL=

# Better Auth Configuration
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=

# Backend URL (for auth cookies and redirects)
# Example: http://localhost:8000 (dev) or https://api.yourapp.com (prod)
BETTER_AUTH_URL=

# OpenAI API Key for AI chat features
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# OpenRouter API Key (alternative to OpenAI)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# CORS Origins (comma-separated for multiple domains)
# Frontend URLs that can access the backend API
# Example: http://localhost:3007 or https://yourapp.vercel.app
ALLOWED_ORIGINS=

# Server Port (optional, defaults to 8000)
PORT=8000

# Environment (development/staging/production)
ENVIRONMENT=development

# Frontend Environment Variables
# ---------------------------

# Backend API Base URL
# Must match BETTER_AUTH_URL above
# Example: http://localhost:8000 or https://api.yourapp.com
NEXT_PUBLIC_API_URL=

# OpenRouter API Key for frontend (if using client-side calls)
NEXT_PUBLIC_OPENROUTER_API_KEY=
NEXT_PUBLIC_OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Node Environment
NODE_ENV=development
