{
  "name": "task-web-app",
  "version": "1.0.0",
  "private": true,
  "description": "Task Web App Monorepo - Frontend and Backend",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "cd backend && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build": "npm run build:frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "start": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run start:backend\" \"npm run start:frontend\"",
    "start:frontend": "npm run start --workspace=frontend",
    "start:backend": "cd backend && uvicorn main:app --host 0.0.0.0 --port 8000",
    "lint": "npm run lint --workspace=frontend",
    "test": "npm run test:backend",
    "test:backend": "cd backend && pytest",
    "install:all": "npm install && cd backend && pip install -e .",
    "clean": "rm -rf node_modules frontend/node_modules"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
